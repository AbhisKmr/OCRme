<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scanlibrary.ocrme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name="com.scanlibrary.ocrme.di_dagger.App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5221781428763224~3047729508" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name="com.scanlibrary.ocrme.main.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.scanlibrary.ocrme.main.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.about.AboutActivity"
            android:exported="true"
            android:label="@string/about"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.update_to_premium.UpdateToPremiumActivity"
            android:exported="true"
            android:label="@string/update_to_premium"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.my_docs.MyDocsActivity"
            android:exported="true"
            android:label="@string/my_docs"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.get_more_requests.GetMoreRequestsActivity"
            android:exported="true"
            android:label="@string/get_free_requests"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />
        </activity>

        <activity
            android:name="com.scanlibrary.ocrme.language_choser.LanguageOcrActivity"
            android:exported="true"
            android:label="@string/language_label"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.ocr_result.translate.TranslateActivity"
            android:exported="true"
            android:label="@string/translate"
            android:parentActivityName="com.scanlibrary.ocrme.ocr_result.OcrResultActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.ocr_result.OcrResultActivity" />
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.ocr_result.OcrResultActivity"
            android:exported="true"
            android:label="@string/result"
            android:launchMode="singleTop"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />
        </activity>
        <activity
            android:name="com.scanlibrary.ocrme.ocr.OcrActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:noHistory="true"
            android:parentActivityName="com.scanlibrary.ocrme.main.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.scanlibrary.ocrme.main.MainActivity" />

        </activity>
    </application>

</manifest>